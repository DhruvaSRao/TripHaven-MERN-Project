<% layout("/layouts/boilerplate") %>
<div class="row">
    <div class="col-8 offset-2">
        <br><br>
        <h3>Create a new listing</h3>
        <form method="POST" action="/listings" novalidate class="needs-validation" enctype="multipart/form-data">
            <br>
            <div class="mb-3">
                <label for="title" class="form-label">Title</label>
                <br>
                <input name="listing[title]" placeholder="Enter the title" type="text" class="form-control" required>
                <div class="valid-feedback">Valid title selected!</div>
                <div class="invalid-feedback">Please enter a valid Title</div>
                <br>
            </div>
            <div class="mb-3">
                <label for="description" class="form-label">Description</label>
                <br>
                <textarea name="listing[description]" placeholder="Enter the description" class="form-control" required></textarea>
                <div class="invalid-feedback">Please enter a short description</div>
                <br>
            </div>
            <div class="mb-3">
                <label for="image" class="form-label">Upload Listing Image</label>
                <br>
                <input name="listing[image]" type="file" class="form-control">
                required
                <br>
            </div>
            <div class="row">
                <div class="mb-3 col-md-4">
                    <label for="price" class="form-label">Price</label>
                    <br>
                    <input name="listing[price]" placeholder="Enter the price" class="form-control" required>
                    <div class="invalid-feedback">Please enter a valid Price</div>
                </div>
                <div class="mb-3 col-md-8">
                    <label for="country" class="form-label">Country</label>
                    <br>
                    <input name="listing[country]" placeholder="Enter the country" type="text" class="form-control" required>
                    <div class="invalid-feedback">Please enter a valid Country</div>
                </div>
            </div>
            <div class="mb-3">
                <label for="location" class="form-label">Location</label>
                <br>
                <input name="listing[location]" placeholder="Enter the location" type="text" class="form-control" required>
                <div class="invalid-feedback">Please enter a valid Location</div>
                <br><br>
            </div>
            <button class="btn btn-dark mb-3 add-btn">Add</button>
        </form>
    </div>
</div>


